# Bank Statement Transaction Extractor - Environment Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Output directory for generated reports
OUTPUT_DIR=./output

# Log directory for application logs
LOG_DIR=./logs

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================

# Maximum file size in megabytes (default: 10 MB)
MAX_FILE_SIZE_MB=10

# ============================================================================
# VALIDATION SETTINGS
# ============================================================================

# Strict mode validation (true/false)
# When true, rejects more transactions for safety
STRICT_MODE=false

# Allow zero-amount transactions (true/false)
ALLOW_ZERO_AMOUNTS=false

# Maximum transaction amount (amounts above this are considered balances)
MAX_TRANSACTION_AMOUNT=1000000.00

# Minimum description length (characters)
MIN_DESCRIPTION_LENGTH=3

# ============================================================================
# PROCESSING SETTINGS
# ============================================================================

# Maximum lines to continue for multi-line descriptions
MAX_CONTINUATION_LINES=10

# Threshold for identifying balance lines vs transactions (in dollars)
# Transactions above this amount are likely balances
BALANCE_THRESHOLD=100000.00

# Enable OCR fallback for scanned PDFs (requires additional packages)
ENABLE_OCR_FALLBACK=false

# ============================================================================
# API SETTINGS
# ============================================================================

# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# ============================================================================
# FRONTEND SETTINGS
# ============================================================================

# Frontend server host
FRONTEND_HOST=0.0.0.0

# Frontend server port
FRONTEND_PORT=8501
